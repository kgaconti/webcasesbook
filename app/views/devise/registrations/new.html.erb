<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'well'}) do |f| %>
    
    <fieldset>
    <legend>Register</legend>

      <%= f.error_notification %>

      <div class="form-inputs">
      	<%= f.input :first_name, required: true %>
      	<%= f.input :last_name,required: true %>
      	<%= f.input :profile_name %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Register", class: 'btn btn-info' %>
      </div>
    </fieldset>
   <% end %>
  </div>

  <div class="span8">
    <h2>Registering with Webcasesbook is super quick and easy</h2>
  </div>
</div>
<%= render "devise/shared/links" %>

