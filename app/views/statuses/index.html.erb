<div class="page-header">
  <h1>All Statuses</h1>
</div>

<%= link_to 'Post a New Status', new_status_path, class: 'btn btn-info' %>

    <% @statuses.each do |status| %>
    <div class="status">
      <div class="row">
        <div class="span1">
          <span class="pic">
            <%= image_tag status.user.gravatar_url, class: "img-circle" %>
          </span>
        </div>
        <div class="span7">
          <strong><%= status.user.full_name %></strong>
          <p><%= status.content %></p>
          <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + ' ago', status %>
            <span class="admin">
              | <%= link_to 'Edit', edit_status_path(status) %>
            <% if status.user %>
              | <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure you want to delete this status?' } %>
             <% end %>
            </span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  




